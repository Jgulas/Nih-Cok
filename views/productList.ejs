<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Daftar Produk</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #efebe9;
      color: #3e2723;
      margin: 0;
      padding: 20px;
    }

    h1 {
      text-align: center;
      color: #4e342e;
    }

    ul {
      list-style-type: none;
      padding: 0;
    }

    li {
      background-color: #d7ccc8;
      border: 1px solid #a1887f;
      border-radius: 8px;
      padding: 15px;
      margin-bottom: 15px;
    }

    a {
      color: #4e342e;
      text-decoration: none;
      font-weight: bold;
    }

    a:hover {
      text-decoration: underline;
    }

    .no-products {
      text-align: center;
      color: #795548;
      font-style: italic;
    }
  </style>
</head>
<body>

  <%- include('./partials/nav') %>

  <h1>Daftar Produk</h1>

  <% if (products.length === 0) { %>
    <p class="no-products">Tidak ada produk.</p>
  <% } else { %>
    <ul>
      <% products.forEach(product => { %>
        <li>
          <strong><%= product.name %></strong> - <%= product.description %><br>
          Harga: Rp<%= product.price.toLocaleString() %><br>
          <a href="/products/<%= product.id %>">Lihat Detail</a>
        </li>
      <% }) %>
    </ul>
  <% } %>

</body>
</html>

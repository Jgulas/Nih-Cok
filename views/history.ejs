<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>List Product</title>
    <style>
      body {
        background-color: #fdf6f0;
        font-family: Arial, sans-serif;
      }

      .container {
        width: 90%;
        max-width: 1000px;
        margin: 40px auto;
        padding: 20px;
        background-color: #fff3e6;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      }

      h1 {
        text-align: center;
        color: #5c3210;
      }

      .add-button {
        display: inline-block;
        margin-bottom: 20px;
      }

      .add-button a {
        text-decoration: none;
        background-color: #8b4513;
        color: white;
        padding: 10px 15px;
        border-radius: 5px;
      }

      .add-button a:hover {
        background-color: #5c3210;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
      }

      th,
      td {
        text-align: left;
        padding: 12px;
        border: 1px solid #ccc;
      }

      th {
        background-color: #d9a066;
        color: white;
      }

      tr:nth-child(even) {
        background-color: #fffaf3;
      }

      img {
        border-radius: 5px;
        object-fit: cover;
      }

      .action-buttons button {
        margin-right: 5px;
      }

      .action-buttons a {
        text-decoration: none;
        padding: 6px 10px;
        background-color: #8b4513;
        color: white;
        border-radius: 4px;
      }

      .action-buttons a:hover {
        background-color: #5c3210;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav-user.ejs', {userid: id}) %>

    <div class="container">
      <h1>List Product</h1>
      <hr />
      <br />
      
      <table>
        <thead>
          <tr>
            <th>Product Name</th>
            <th>Image</th>
            <th>Price</th>
            <th>Order Status</th>
          </tr>
        </thead>
        <% order.forEach(el => { %>
            <tr>
                <td><%= el.Product.name %></td>
                
                <td>
                    <img src=" <%= el.Product.imageUrl %>" alt="<%= el.Product.imageUrl %>" width="100px" height="100px">
                </td>
                <td><%= el.price %></td>
                <td><%= el.status %></td>
            </tr>
        <% }) %>
      </table>

    
    </div>
  </body>
</html>
